{
  "name": "nestjs-experiments",
  "workspaces": [
    "experiments/*",
    "shared/*"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "start": "echo \"Use pnpm --filter <pkg> start:dev or npm run start:exp <name>\"",
    "start:exp": "bash ./scripts/run-experiment.sh",
    "new:exp": "bash ./scripts/new-experiment.sh",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.0.0"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "express": "^5.1.0"
  }
}
